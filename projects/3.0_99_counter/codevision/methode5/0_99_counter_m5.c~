#include <delay.h>
#include <mega32a.h>
#include <stdio.h>

void main() {

  int i = 0;

  DDRA = 0xFF;
  PORTA = 0x00;

  DDRB = 0xFF;
  PORTB = 0x00;

  while (1) {
//    PORTB = 1;
//    PORTA = 0;
//    delay_ms(10);
//    PORTB = 2;
//    PORTA = 0;
//    delay_ms(100);
//
//    PORTB = 1;

    for (i = 0; i < 100; i++) {
      PORTB = 2;
      PORTA = i / 10;
      delay_ms(50);

      PORTB = 1;
      PORTA = i % 10;
      delay_ms(50);
    };
  }
}